<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- For all versions-->
	<style name="AppTheme" parent="AppTheme.Base">
		<item name="ptrHeaderStyle">@style/Widget.Custom.PtrHeader</item>
	</style>

	<!-- For fallback versions-->
	<style name="AppTheme.Base" parent="android:Theme.Holo.Light">
		<item name="android:actionBarStyle">@style/HoloActionBarStyle</item>
	</style>

	<style name="HoloActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
		<item name="android:background">@color/colorPrimary</item>
		<item name="android:displayOptions">showHome|showTitle</item>
		<item name="android:windowActionBarOverlay">true</item>
		<item name="android:paddingLeft">14dp</item>
		<item name="android:layout_marginLeft">-15dp</item>

		<item name="android:height">55dp</item>

		<item name="android:icon">@drawable/action_bar_spacing_holo</item>
	</style>

	<style name="Widget.Custom.PtrHeader" parent="android:Widget">
		<!-- The background of the header view -->
		<!-- The height of the header view. Please note, only set if in you really need to -->
		<item name="ptrHeaderHeight">55dp</item>
		<!-- Color to tint the progress bar -->
		<item name="ptrProgressBarColor">@color/colorPrimaryDark</item>
		<item name="ptrHeaderBackground">@color/colorPrimary</item>
		<!-- Style of the Progress Bar. Values are either: inside or outside -->
		<item name="ptrProgressBarStyle">outside</item>
		<!-- The strings to be displayed at the various states -->
		<item name="ptrPullText">@string/pull_to_refresh</item>
	</style>
</resources>