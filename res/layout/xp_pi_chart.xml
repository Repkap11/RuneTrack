<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/switcher_loading_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_profile_background_color" >

    <ViewSwitcher
        android:id="@+id/switcher_loading_failure"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/user_profile_error_message"
            android:clickable="true"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Failed to load weekly xp pi chart. Click to try again."
            android:layout_gravity="center" />
    </ViewSwitcher>

    <com.repkap11.runetrack.PiChart
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

</ViewSwitcher>